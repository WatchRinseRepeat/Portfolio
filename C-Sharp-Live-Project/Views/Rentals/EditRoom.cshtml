@model TheatreCMS3.Areas.Rent.Models.RentalRoom

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mx-auto col-6">
    <div class="card-header cms-text-dark">Edit Rental Room</div>
