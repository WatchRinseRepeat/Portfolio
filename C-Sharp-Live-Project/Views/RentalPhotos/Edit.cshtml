@model TheatreCMS3.Areas.Rent.Models.RentalPhoto

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card mx-auto col-6">
    <div class="card-header cms-text-dark">Edit Rental Photo</div>

    @using (Html.BeginForm("Edit", "RentalPhotos", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.RentalPhotoId)

            <div class="form-group cms-text-dark">
                <div class="col">
                    @Html.Label("Rental Name")
                </div>
                <div class="col">
                    @Html.EditorFor(model => model.RentalsName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RentalsName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group cms-text-dark">
                <div class="col">
                    @Html.Label("Damaged?")
                </div>
                <div class="col">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Damaged)
                        @Html.ValidationMessageFor(model => model.Damaged, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group cms-text-dark">
                <div class="col">
                    @Html.Label("Rental Image")
                </div>
                @if (Model.RentalPhotoImg != null)
                {
                    <div class="col">
                        <img src="@Url.Action("getImg", "RentalPhotos", new { id = Model.RentalPhotoId})" alt="@Model.RentalsName image" />
                    </div>
                }

                <div class="col">
                    <input type="file" name="uploadImage" />
                </div>

            </div>

            <div class="form-group cms-text-dark">
                <div class="col">
                    @Html.Label("Details")
                    <div class="col">
                        @Html.EditorFor(model => model.Details, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group text-center">
                <div class="col">
                    <input type="submit" value="Save" class="btn cms-bg-main text-white" />
                    <button class="btn cms-bg-dark" type="button">
                        @Html.ActionLink("Back to List", "Index")
                    </button>
                </div>
            </div>
        </div>
    }

</div>

